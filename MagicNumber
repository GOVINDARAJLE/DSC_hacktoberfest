a magic number is a natural number that has both the digits 7 and 9 in it eg. 78, 879,....
               given a number n, find the closest magic number to n.

               1. input:  8
                  output: 79

               2. input: 900
                  output: 897
                  
                  
 
 #include <bits/stdc++.h>
using namespace std;

bool checkMagic(int n){
    int flag7 = -1, flag9 = -1;

    while(n > 0){
        if(n % 10 == 7){
            flag7 = 1;
        }else if(n % 10 == 9){
            flag9 = 1;
        }

        n = n / 10;
    }
    if(flag7 != -1 && flag9 != -1)
    return true;
    else return false;
}

int main() {
    int n;
    cin>>n;
    if(checkMagic(n)){
        cout<<"is a Magic Number";
        exit(0);
    }

    int len = 0, dummy = n;

    while(dummy>0){
        
             
    }
}

